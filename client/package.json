{
  "name": "polarbase-client",
  "version": "0.1.0",
  "keywords": [
    "postgresql",
    "backend-as-a-service",
    "open-source",
    "mcp-server",
    "ai-agents",
    "multi-view-ui",
    "spreadsheet",
    "developer-tools",
    "bun",
    "elysiajs",
    "angular",
    "typescript",
    "low-code",
    "realtime-database"
  ],
  "author": "Qui Nguyen",
  "license": "MIT",
  "description": "Extensible Open-source Data Backend for PostgreSQL. Features a multi-view UI (Spreadsheet, Dashboard, Calendar), AI-Agent integration via MCP, and zero vendor lock-in.",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@formulajs/formulajs": "^4.5.4",
    "@primeuix/themes": "^1.2.5",
    "ace-builds": "^1.43.5",
    "angular-resizable-element": "^8.0.0",
    "dayjs": "^1.11.19",
    "lodash": "^4.17.21",
    "primeicons": "^7.0.0",
    "primeng": "^20.3.0",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.17.20",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "tailwindcss-primeui": "^0.6.1",
    "typescript": "~5.9.2"
  }
}
