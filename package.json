{
  "name": "polarbase",
  "version": "0.6.2-beta",
  "author": "Qui Nguyen",
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "description": "Extensible Open-source Data Backend for PostgreSQL. Features a multi-view UI (Spreadsheet, Dashboard, Calendar), AI-Agent integration via MCP, and zero vendor lock-in.",
  "keywords": [
    "postgresql",
    "backend-as-a-service",
    "open-source",
    "mcp-server",
    "ai-agents",
    "multi-view-ui",
    "spreadsheet",
    "developer-tools",
    "bun",
    "elysiajs",
    "angular",
    "typescript",
    "low-code",
    "realtime-database"
  ],
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"bun --cwd server dev\" \"bun --cwd client start\"",
    "build": "bun --cwd client build"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
